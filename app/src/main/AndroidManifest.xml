<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.kido1611.dicoding.moviecatalogue3">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="id.kido1611.dicoding.moviecatalogue3.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="id.kido1611.dicoding.moviecatalogue3.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <receiver
            android:name=".notification.ReleaseNotification"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity android:name=".preference.PreferenceActivity"
            android:label="@string/alarm_preference"/>

        <receiver
            android:name=".notification.DailyNotification"
            android:enabled="true"
            android:exported="true" />

        <provider
            android:name=".db.FavoriteMovieProvider"
            android:authorities="id.kido1611.dicoding.moviecatalogue3"
            android:exported="true"
            android:readPermission="id.kido1611.dicoding.moviecatalogue3.READ_DATABASE"
            android:writePermission="id.kido1611.dicoding.moviecatalogue3.WRITE_DATABASE" />

        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".widget.FavoriteMovieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_movie_widget_info" />
        </receiver>

        <activity android:name=".activity.searchmovie.SearchMovieActivity" />
        <activity android:name=".activity.searchtv.SearchTVActivity" />
        <activity
            android:name=".activity.detailtv.DetailTVActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.detailmovie.DetailMovieActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>